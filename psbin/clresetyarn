#!/bin/bash

. cluster_topology.sh

echo "Resetting cluster" > /tmp/$USER-clresetyarn.log

for i in `seq 0 $MAX_NODE`;
do
  echo "node-$i" >> /tmp/$USER-clresetyarn.log
  ssh node-$i \
   'rm -rf /mnt/extra/dfs-ucare/nm-local-dir ;'  >> /tmp/$USER-clresetyarn.log
done

cat /tmp/$USER-clresetyarn.log
