<?xml version="1.0"?>
<configuration>

  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>

  <property>
    <name>yarn.nodemanager.aux-services.mapreduce.shuffle.class</name>
    <value>org.apache.hadoop.mapred.ShuffleHandler</value>
  </property>

  <property>
    <name>yarn.resourcemanager.hostname</name>
    <value>node-17</value>
  </property>

<!--  <property>
    <name>yarn.nodemanager.local-dirs</name>
    <value>/mnt/extra/dfs-ucare/nm-local-dir</value>
  </property>-->

<!-- MEMORY TUNING BEGIN
  <property>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <value>1024</value>
  </property>

  <property>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <value>8192</value>
  </property>

MEMORY TUNING END -->

  <property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <!-- <value>16384</value> maximizing container usage -->
    <value>12288</value> <!-- using 12 containers per node -->
    <!-- <value>4096</value> write mode -->
    <!-- <value>2048</value> experiment mode -->
  </property>

  <property>
    <name>yarn.nodemanager.resource.cpu-vcores</name>
    <!-- <value>16</value> maximizing container usage -->
    <value>12</value> <!-- using 12 containers per node -->
    <!-- <value>4</value> write mode -->
    <!-- <value>2</value> experiment mode -->
  </property>

  <property>
    <name>yarn.nodemanager.disk-health-checker.max-disk-utilization-per-disk-percentage</name>
    <value>100</value>
  </property>

  <property>
    <name>yarn.resourcemanager.recovery.enabled</name>
    <value>false</value>
  </property>

  <property>
    <name>yarn.nodemanager.log.retain-seconds</name>
    <value>86400</value>
  </property>

  <!-- @Cesar: Added by cesar to control location of app master -->
  <property>
    <name>yarn.pbse.experiment.blAppMaster</name>
    <value></value>
  </property>

  <property>
    <name>yarn.pbse.experiment.fixAppMaster</name>
    <value>false</value>
  </property>
  <!-- @Cesar: End cesar custom configuration -->

</configuration>
