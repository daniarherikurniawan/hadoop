<!-- Put site-specific property overrides in this file. -->

<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
    <description>Execution framework.</description>
  </property>

  <property>
    <name>mapreduce.job.userlog.retain.hours</name>
    <value>48</value>
    <description>Max log retain duration.</description>
  </property>

  <property>
    <name>mapreduce.map.log.level</name>
    <value>DEBUG</value>
  </property>

  <property>
    <name>mapreduce.reduce.log.level</name>
    <value>INFO</value>
  </property>

  <property>
    <name>mapreduce.client.output.filter</name>
    <value>ALL</value>
  </property>

  <property>
    <name>mapreduce.reduce.speculative</name>
    <value>true</value>
  </property>

  <property>
    <name>mapreduce.map.speculative</name>
    <value>true</value>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.command-opts</name>
    <value>-Xmx1024m</value>
    <description>default: -Xmx1024m</description>
  </property>

  <property>
    <name>mapred.child.java.opts</name>
    <value>-Xmx200m</value>
    <description>default: -Xmx200m</description>
  </property>

  <property>
    <name>mapreduce.jobhistory.address</name>
    <value>10.1.1.19:10020</value>
    <description>MapReduce JobHistory Server IPC host:port</description>
  </property>

  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value>10.1.1.19:19888</value>
    <description>MapReduce JobHistory Server Web UI host:port</description>
  </property>


  <!-- CUSTOM CONF BEGIN -->
  <property>
    <name>mapreduce.policy.faread</name>
    <value>true</value>
    <description>UCARE: failure aware read</description>
  </property>

  <property>
    <name>mapreduce.policy.faread.sort.datanode</name>
    <value>true</value>
    <description>UCARE: switch to always pick the least datanode</description>
  </property>

  <property>
    <name>mapreduce.policy.faread.progress_interval</name>
    <value>3000</value>
    <description>UCARE: heartbeat interval in ms</description>
  </property>

  <property>
    <name>mapreduce.policy.faread.avoid_single_readpath</name>
    <value>true</value>
    <description>UCARE: rare single read path mechanishm detection</description>
  </property>

  <property>
    <name>mapreduce.policy.faread.avoid_single_assignpath</name>
    <value>true</value>
    <description>UCARE: rare single read path mechanishm detection</description>
  </property>

  <property>
    <name>mapreduce.experiment.slownode</name>
    <value>pc001</value> <!-- node-4 -->
    <description>UCARE: slow node host in emulab experiment</description>
  </property>
  <!-- CUSTOM CONF END -->

</configuration>
